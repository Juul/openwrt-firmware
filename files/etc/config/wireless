config wifi-device 'radio0'
	option type 'mac80211'
	option hwmode '11g'
	option channel '3' 
	option disabled '0'
	option phy 'phy0'

# define a non-connected wifi interface
# so we can get the MAC address
config wifi-iface
        option device 'radio0'
        option ifname 'wlan0'
        option mode 'sta'

